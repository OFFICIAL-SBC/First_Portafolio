<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountriesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PRIMARY_COLOR</item> // This is the primary brand color used for the application's toolbar and other UI elements.
        <item name="colorPrimaryVariant">@color/DARK_PRIMARY_COLOR</item> // This is a darker variant of the primary color, used for status bars and other UI elements.
        <item name="colorOnPrimary">@color/TEXT_ICONS</item> // This is the color used for text and icons on top of the primary color.
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ACCENT_COLOR</item> //This is the secondary brand color used for UI elements such as buttons and switches.
        <item name="colorSecondaryVariant">@color/SECONDARY_TEXT</item> //This is a darker variant of the secondary color, used for some UI elements.
        <item name="colorOnSecondary">@color/PRIMARY_TEXT</item> //  This is the color used for text and icons on top of the secondary color.
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CountryName">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CountrySubName">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CountrySubName.textViewDetail">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="GeneralTitles">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/PRIMARY_COLOR</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>